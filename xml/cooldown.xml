<?xml version="1.0" encoding="UTF-8"?>
<Definition>

	<Import url="[config.mod.template]button/iconButton.xml" />

	<Constants>
		<Constant name="assets" value="[config.ui.skin]assets.swf|" />
		<Constant name="css" value="[config.ui.skin]css/" />
	</Constants>

	<Container>
		<mouseEnabled>true</mouseEnabled>
		<Anchors>
			<Anchor>
				<AbsDimension x="200"
							  y="200" />
			</Anchor>
		</Anchors>

		<Texture name="tx_background">
			<Size>
				<AbsDimension x="440"
							  y="270" />
			</Size>

			<uri>[local.assets]tx_generalBackgroundWithTitle</uri>
			<autoGrid>true</autoGrid>
		</Texture>
		
		<ComboBox name="cb_fighters" strata="TOP">
			<Anchors>
				<Anchor relativeTo="tx_background"
						point="TOPRIGHT"
						relativePoint="TOPRIGHT">
					<AbsDimension x="-80" y="21" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="218" y="25" />
			</Size>
			
			<autoSelectMode>0</autoSelectMode>
			<buttonTexture>[local.assets]btn_combobox</buttonTexture>
			<listTexture>[local.assets]tx_combobox</listTexture>
			<rendererArgs>[local.css]normal.css,,,[colors.grid.over],[colors.grid.selected]</rendererArgs>
			<scrollBarCss>[local.css]scrollBar.css</scrollBarCss>
		</ComboBox>

		<!-- Spells grid -->
		<Grid name="grid_spell">
			<Anchors>
				<Anchor>
					<AbsDimension x="15"
								  y="52" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="400"
							  y="180" />
			</Size>

			<rendererName>InlineXmlGridRender</rendererName>
			<rendererArgs>updateEntry,[colors.grid.line],</rendererArgs>
			<verticalScrollbarCss>[local.css]scrollBar.css</verticalScrollbarCss>
			<slotWidth>380</slotWidth>
			<slotHeight>30</slotHeight>

			<!-- Grid line -->
			<Container>
				<Label name="lbl_name">
					<Anchors>
						<Anchor>
							<AbsDimension x="5"
										  y="0" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension x="290"
									  y="30" />
					</Size>

					<css>[local.css]normal.css</css>
				</Label>

				<Label name="lbl_cooldown">
					<Anchors>
						<Anchor>
							<AbsDimension x="300"
										  y="0" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension x="80"
									  y="30" />
					</Size>

					<css>[local.css]normal.css</css>
					<cssClass>p0</cssClass>
				</Label>
			</Container>
		</Grid>

		<!-- Close button -->
		<iconButton name="btn_close">
			<Anchors>
				<Anchor relativeTo="tx_background"
						point="TOPRIGHT"
						relativePoint="TOPRIGHT" />
			</Anchors>

			<Size>
				<AbsDimension x="57"
							  y="36" />
			</Size>

			<uri>[local.assets]btn_cornerCross</uri>
		</iconButton>

		<!-- Config button -->
		<!-- HACK: on ajoute un btn_PlusMinus pour reutilise son background -->
		<Texture name="tx_btn_config">
			<Anchors>
				<Anchor relativeTo="btn_close">
					<AbsDimension x="-28"
								  y="0" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="49"
							  y="36" />
			</Size>

			<uri>[local.assets]btn_PlusMinus</uri>
		</Texture>

		<iconButton name="btn_config">
			<Anchors>
				<Anchor relativeTo="tx_btn_config">
					<AbsDimension x="16"
								  y="8" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="24"
							  y="24" />
			</Size>

			<uri>[local.assets]btn_option_square</uri>
		</iconButton>

	</Container>
</Definition>
